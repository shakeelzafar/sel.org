@using SELORG.Models
@{
    Layout = null;
    String URL = (String)Session["CurrentURL"];
    List<Comment> list = new selorgpkEntities().Comments.Where(x => x.URL.Equals(URL) && x.isDeleted == 0).ToList();
}

	 <div class="response">
					<h4>Responses</h4>
                    @{
                        if(list.Count()>0){
                        foreach (var v in list.Where(c => c.ReplyId == "0" || c.ReplyId == null).ToList())
                        {
                            String imageuri = v.userId + ".jpg";
                            
				        	<div class="media response-info">
						<div class="media-left response-text-left">
							<a href="#">
								<img class="media-object" src="../../Content/client/images/@imageuri" alt=""/>
							</a>
							<h5><a href="../../users/profile/@v.userId">@v.UserProfile.DisplayName</a></h5>
						</div>
						<div class="media-body response-text-right">
							<p>@v.Content</p>
							<ul>
								<li>@v.commentDate</li>
								<li><a href="#response" onclick="goToReply(@v.CommentId)">Reply</a></li>
							</ul>
                            @{
                                if(v.hasReply==1){

                                    List<Comment> replies = list.Where(x => x.ReplyId == v.CommentId + "").ToList();
                                int i=0;
                                foreach (var comment in replies)
                                { 
                                    imageuri = comment.userId+".jpg";
							            <div class="media response-info">
								            <div class="media-left response-text-left">
									            <a href="#">
										            <img class="media-object" src="../../Content/client/images/@imageuri" alt=""/>
									            </a>
									            <h5><a href="#">@comment.UserProfile.DisplayName</a></h5>
								            </div>
								            <div class="media-body response-text-right">
									            <p>@comment.Content</p>
									            <ul>
										            <li>@comment.commentDate</li>
										           
									            </ul>		
								            </div>
								            <div class="clearfix"> </div>
							            </div>
                            
                            }
                            }
                            }
						</div>
						<div class="clearfix"> </div>
					</div>
                         }
                         }
                         else{
                         <p>No Responses found yet. </p>   
                        }
                    }
			
				</div>	
		 <script type="text/javascript">
		     function goToReply(id) {		      
		         $("#parentId").val(id);
		     }
    </script>
